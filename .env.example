# ============================================================================
# SPARKEEFY WAITLIST - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Environment: development | production | test
NODE_ENV=development

# Server port (1-65535)
PORT=3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/sparkeefy_waitlist"

# MySQL connection string (alternative)
# DATABASE_URL="mysql://user:password@localhost:3306/sparkeefy_waitlist"

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Frontend application URL (for CORS and referral links)
FRONTEND_URL="http://localhost:5173"

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed origins (comma-separated or * for all)
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"

# ============================================================================
# SENTRY CONFIGURATION (Optional)
# ============================================================================

# Sentry DSN for error tracking (leave empty to disable)
SENTRY_DSN=""

# Sentry environment name
SENTRY_ENVIRONMENT="development"

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================

# Session cookie name
SESSION_COOKIE_NAME="sparkeefy_session"

# Session duration in days (1-365)
SESSION_DURATION_DAYS=30

# ============================================================================
# SMTP EMAIL CONFIGURATION
# ============================================================================

# Gmail SMTP settings (for magic link emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Your Gmail address
SMTP_USER=sparkeefy@gmail.com

# Gmail App Password (generate at https://myaccount.google.com/apppasswords)
SMTP_PASS=your-16-character-app-password

# FROM email address (can be same as SMTP_USER)
SMTP_FROM=sparkeefy@gmail.com

# Note: To use Gmail SMTP:
# 1. Enable 2FA on your Google account
# 2. Generate app password: https://myaccount.google.com/apppasswords
# 3. Copy 16-character password and paste above as SMTP_PASS

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================

# Global rate limit window (milliseconds)
RATE_LIMIT_WINDOW_MS=900000

# Global rate limit max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Join rate limit window (milliseconds)
JOIN_RATE_LIMIT_WINDOW_MS=3600000

# Join rate limit max requests per window
JOIN_RATE_LIMIT_MAX_REQUESTS=5
